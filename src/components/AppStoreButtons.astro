---
const appStoreUrl = "https://apps.apple.com/de/app/chrima-subscription-manager/id6749495458?l=en-GB";
const playStoreUrl = "https://play.google.com"; // Replace with actual Play Store URL
---

<div class="flex flex-col sm:flex-row justify-center items-center gap-4 mb-8">
  <a
    href={appStoreUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="transition-transform hover:scale-105"
  >
    <img
      src="/images/app-store-badge.png"
      alt="Download on the App Store"
      class="h-14"
      loading="lazy"
    />
  </a>
  <a
    href={playStoreUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="transition-transform hover:scale-105"
  >
    <img
      src="/images/google-play-badge.png"
      alt="Get it on Google Play"
      class="h-14"
      loading="lazy"
    />
  </a>
</div>
